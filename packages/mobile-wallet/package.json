{
  "name": "@mobius-network/mobile-wallet",
  "version": "0.0.1",
  "description": "Mobius Network mobile wallet",
  "license": "MIT",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:fresh": "npm start -- --reset-cache",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "node node_modules/jest/bin/jest.js --watch",
    "format": "prettier --write src/**/*.js *.js",
    "lint": "eslint --fix --ext js .",
    "lint-staged": "lint-staged",
    "clean": "watchman watch-del-all && rm -rf ./ios/build ./android/build $TMPDIR/react-*",
    "link": "react-native link"
  },
  "dependencies": {
    "react": "16.4.2",
    "react-native": "0.56.0",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.9.1",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.56",
    "@babel/preset-flow": "7.0.0-beta.56",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "9.0.0-beta.3",
    "babel-jest": "23.4.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-react-native": "5.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-react-native": "^3.2.1",
    "flow-bin": "^0.78.0",
    "jest": "22.4.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.12.1",
    "react-native-dotenv": "^0.2.0",
    "react-test-renderer": "16.4.2"
  },
  "jest": {
    "preset": "react-native"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
