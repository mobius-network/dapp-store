{
  "name": "mobius-network",
  "version": "0.0.1",
  "private": true,
  "description": "Mobius Network monorepo",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@haskkor/react-native-pincode",
      "**/components/",
      "@mobius-network/mobile-wallet/react-native-*",
      "@mobius-network/mobile-wallet/react-native-*/**",
      "@mobius-network/mobile-wallet/vm-browserify",
      "@mobius-network/mobile-wallet/vm-browserify/**",
      "**/@tradle/react-native-http",
      "**/@tradle/react-native-http/**",
      "**/https-browserify",
      "**/https-browserify/**",
      "**/stream-browserify",
      "**/stream-browserify/**",
      "**/eventsource",
      "**/eventsource/**",
      "@mobius-network/mobile-wallet/@haskkor/react-native-pincode",
      "@mobius-network/components/react-native-*",
      "@mobius-network/components/react-native-*/**"
    ]
  },
  "scripts": {
    "reset-modules": "rm -rf node_modules/ yarn.lock packages/*/node_modules",
    "reset-yarn": "yarn cache clean",
    "reset-rn": "watchman watch-del-all; rm -fr $TMPDIR/react-*; rm -rf $TMPDIR/haste-map-react-native-packager-*",
    "reset-cache": "yarn reset-yarn && yarn reset-rn",
    "reset": "yarn reset-modules && yarn reset-cache",
    "run-all": "npx wsrun",
    "prettier": "npx wsrun prettier",
    "lint": "npx wsrun lint",
    "format": "npx wsrun format",
    "start:web": "yarn workspace @mobius-network/web-wallet start",
    "start:mobile": "yarn workspace @mobius-network/mobile-wallet start",
    "start:mobile:ios": "yarn workspace @mobius-network/mobile-wallet ios",
    "start:mobile:android": "yarn workspace @mobius-network/mobile-wallet android",
    "start:components": "yarn workspace @mobius-network/components start",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "wsrun": "^2.2.0"
  },
  "engines": {
    "node": "8.11.3"
  },
  "dependencies": {
    "@tradle/react-native-http": "^2.0.1",
    "eslint-plugin-react-native": "^3.2.1"
  }
}
