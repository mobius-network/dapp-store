{
  "name": "mobius-network",
  "version": "0.0.1",
  "private": true,
  "description": "Mobius Network monorepo",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/*eslint*",
      "**/*eslint*/**",
      "**/react-native",
      "**/react-native/**",
      "mobile-wallet/react-native-*",
      "mobile-wallet/react-native-*/**"
    ]
  },
  "scripts": {
    "format": "npx wsrun format",
    "lint": "npx wsrun lint",
    "precommit": "npx wsrun lint-staged",
    "reset-cache": "yarn reset-yarn && yarn reset-rn",
    "reset-modules": "rm -rf node_modules/ yarn.lock packages/*/node_modules",
    "reset-rn": "watchman watch-del-all; rm -fr $TMPDIR/react-*; rm -rf $TMPDIR/haste-map-react-native-packager-*",
    "reset-yarn": "yarn cache clean",
    "reset": "yarn reset-modules && yarn reset-cache",
    "run-all": "npx wsrun",
    "start:mobile": "yarn workspace @mobius-network/mobile-wallet start",
    "start:web": "yarn workspace @mobius-network/web-wallet start"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "wsrun": "^2.2.0"
  },
  "engines": {
    "node": "8.11.3"
  }
}
